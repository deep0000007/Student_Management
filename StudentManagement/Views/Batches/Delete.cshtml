@model StudentManagement.Models.Batch

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5">
    <h2 class="text-danger">Delete Batch</h2>
    <h3 class="text-warning">Are you sure you want to delete this?</h3>
    <div class="card">
        <div class="card-header">
            <h4>Batch Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.batch1)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.batch1)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.year)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.year)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            }
        </div>
    </div>
</div>
