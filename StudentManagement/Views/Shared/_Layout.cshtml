<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Control Panel</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/style.css")

    <style>
        /* Main layout styles */
        body {
            display: flex;
            margin: 0;
            height: 100vh;
            overflow: hidden;
            flex-direction: column;
        }

        /* Header styles */
        .header {
            width: 100%;
            background-color: #212529;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        /* Sidebar styles */
        /*.sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            padding-top: 80px;*/ /* Space for the fixed header */
            /*position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            overflow-y: auto;*/
        }

             Sidebar link styles 
            .sidebar .nav-link {
                color: #adb5bd;
                text-decoration: none;
                padding: 10px;
                display: block;
                font-size: 1rem;
            }

                 Maintain visibility when link is focused, active, or visited 
                .sidebar .nav-link:hover,
                .sidebar .nav-link:focus,
                .sidebar .nav-link:active,
                .sidebar .nav-link:visited {
                    color: #ffffff;
                    background-color: #495057;
                    outline: none;
                }

        /* Content area styles */
        .content-wrapper {
            margin-left: 250px;
            padding-top: 80px; /* Space for the fixed header */
            width: calc(100% - 250px);
            height: 100%;
            overflow-y: auto;
            padding: 20px;
        }

        /* Additional Navbar toggler styling for responsive */
        .navbar-toggler {
            display: none; /* Hide on larger screens */
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Header -->
    <header class="header">
        Student Management System
    </header>

    <!-- Sidebar -->
    <nav class="sidebar navbar-dark bg-dark">
        <div class="container">
            <!-- Sidebar links -->
            <ul class="navbar-nav flex-column">
                <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "" }, new { @class = "nav-link" })</li>


                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Courses", "Index", "Course", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Batches", "Index", "Batches", new { area = "" }, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Registrations", "Index", "Registrations", new { area = "" }, new { @class = "nav-link" })</li>
            </ul>

            <!-- User session section -->
            <div class="mt-4">
                @if (Session["UserName"] != null)
                {
                    <p class="text-white">Hello, @Session["UserName"]!</p>
                    @Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "btn btn-danger btn-block mt-2" })
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Login", new { area = "" }, new { @class = "btn btn-primary btn-block mt-2" })
                }
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="content-wrapper">
        <!-- Top Navbar for control panel actions -->
        <nav class="navbar navbar-expand navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" title="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <span class="navbar-text">
                @ViewBag.Title
            </span>
        </nav>

        <!-- Body Content -->
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Student Management System</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
